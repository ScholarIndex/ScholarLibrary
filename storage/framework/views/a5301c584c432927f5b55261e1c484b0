
  	<h3>Filter by</h3>
  	<hr />
  
	
	<div class="ui accordion">
		<form>
		<?php foreach($filters as $label => $params): ?>
			<div class="title <?php echo e(isset($params['active']) ? $params['active'] : ''); ?>">
				<i class="dropdown icon"></i>
				<?php echo e($label); ?>

			</div>
			<div class="content <?php echo e(isset($params['active']) ? $params['active'] : ''); ?>">
				<?php if($params['type'] == 'checkbox'): ?>
					<div class="ui form">
						<div class="grouped fields">
							<?php foreach($params['values'] as $v): ?>
								<?php if($v[0] != ""): ?>
									<div class="field">
								 		<div class="ui checkbox">
											<input type="checkbox" name="<?php echo e($label); ?>[]" value="<?php echo e($v[0]); ?>">
											<label><?php echo e(ucfirst($v[0])); ?></label>
							 			</div>
									</div>
								<?php endif; ?>
							<?php endforeach; ?>
						</div>
					</div>	
				<?php endif; ?>
				<?php if($params['type'] == 'input'): ?>
					<div class="ui icon input filterSearchInput">
					  <input type="text" name="<?php echo e($label); ?>" value="<?php echo e(isset($params['defaultValue']) ? $params['defaultValue'] : ''); ?>" placeholder="<?php echo e($label); ?> contains...">
					  <i class="remove link icon"></i>
					</div>
				<?php endif; ?>

			</div>		
		<?php endforeach; ?>
		</form>
	</div>

  